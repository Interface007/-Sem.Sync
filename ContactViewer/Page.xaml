<UserControl x:Class="ContactViewer.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <Button Height="20" Content="click me" Click="Button_Click"></Button>
            <ListBox Height="100">
                <ItemsControl ItemsSource="{Binding ResultList}"></ItemsControl>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
